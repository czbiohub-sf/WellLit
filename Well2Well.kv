#:kivy 1.11.1
#:import FigureCanvasKivyAgg kivy.garden.matplotlib.backend_kivyagg
#:import plt matplotlib.pyplot

<ConfirmPopup>:
	size_hint: None,None
	height: 400
	width: 500
	title: 'Confirm exit'

<WellLitPopup>:
	size_hint: None,None
	height: 400
	width: 800

<MetaLabel>:
	text_size: self.size
	halign: 'left'
	padding_x: 5
	markup: True
	font_size: 20

<LoadDialog>:
    id: load_dialog
    Button:
        text: 'Open'
        on_release: load_dialog.open(filechooser.path, filechooser.selection)
    FileChooserListView:
        id: filechooser
        on_selection: load_dialog.selected(filechooser.selection)

<Button>
	font_size: 30

<Well2WellWidget>:
	BoxLayout:
		orientation: 'vertical'
		size_hint: 0.375, 1
		pos_hint: {'left': 1, 'top': 1}
        Button:
            text: 'Load Transfer'
            on_press: root.loadTransfer()
            size_hint: 1, 0.2
        Button:
            text: 'Abort Transfer'
            on_press: root.abortTransfer()
            size_hint: 1, 0.2
        Label:
            text: ''
            size_hint: 1, 0.5
        Button:
            text: 'Undo Aliquot'
            size_hint: 1, 0.2
            on_press: root.undo()
        Button:
            text: 'Next'
            size_hint: 1, 1
            pos_hint: {'left': 1, 'bottom': 1}
            on_press: root.next()

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.625, 1
        pos_hint: {'right': 1}
        WellPlot:
            size_hint: 1, 0.5
        WellPlot:
            size_hint: 1, 0.5